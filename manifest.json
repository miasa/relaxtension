{
  "manifest_version": 2,
  "name": "Relaxtension",
  "description": "This extension highlights words by character count",
  "version": "1.0",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "js": [ 
      "js/vendor/jquery-2.1.3.min.js", 
      "js/vendor/jquery.highlight.js", 
      "js/content_script.js"
    ],
    "css": ["css/style.css"],
    "matches": [ "http://*/*", "https://*/*"]
  }]
}
